    "An API that provides a uniform interface for interacting with IOT and home automation devices",
  "version": "3.2.0",
  "maintainers": [
    {
      "name": "Richard Willars",
      "email": "richard@richardwillars.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/richardwillars/thinglator.git"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "config": "^1.30.0",
    "eventemitter2": "^5.0.1",
    "express": "^4.16.2",
    "jsonschema": "^1.2.2",
    "lodash.groupby": "^4.6.0",
    "lokijs": "^1.5.3",
    "md5": "^2.2.1",
    "node-cron": "^1.2.1",
    "pm2": "^4.3.0",
    "socket.io": "^2.0.4",
    "yarn-api": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.3",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1"
  },
  "scripts": {
    "dev": "nodemon app.js",
    "start": "node app.js",
    "test": "jest --coverage && yarn lint",
    "test:watch": "jest --watch",
    "precommit": "lint-staged",
    "lint": "eslint **/*.js"
